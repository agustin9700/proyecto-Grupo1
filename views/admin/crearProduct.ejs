<div class="container-form mx-auto mb-5">
    <a href="/admin" class="btn btn-primary mb-3 boton-regresar">Ver lista</a>
  
    <form action="/admin/crearProduct" method="post" enctype="multipart/form-data" class="row mx-auto text-center p-4 form-border">
        <h3>Creación de Nuevo Producto</h3>
        <h6 class="text-body-tertiary" >Ingrese la información</h6>
        
        <div class="col-sm-12 col-md-6 mb-2">
          <label class="form-label" for="titulo"></label>
            <input class="form-control" type="text" name="name" id="titulo" placeholder="Ingrese un título" value="" >
        </div>
        <div class="col-sm-12 col-md-6 mb-2">
            <label class="form-label" for="precio"></label>
            <input class="form-control" type="number" name="price" id="precio" placeholder="Ingrese el precio" value="">
        </div>

        <div class="col-sm-12 col-md-6 mb-2">
            <label class="form-label" for="descuento"></label>
            <input class="form-control" type="number" name="discount" id="descuento" placeholder="Descuento del" value="">
        </div>

        <div class="col-sm-12 col-md-6 mb-2">
            <label class="mb-1 text-success">Envíos Gratis</label>
            <br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="enviosSi" name="freeShipping" value="true">
                <label for="enviosSi" class="form-check-label">Sí</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="enviosNo" name="freeShipping" value="false">
                <label for="enviosNo" class="form-check-label">No</label>
            </div>
        </div>
        <div class="mb-2 fs-5">
            <label for="fotoproducto" class="form-label">Foto del producto</label>
            <input class="form-control" type="file" id="fotoproducto" name="image">
        </div>

        <div class="col-12 mb-2">
            <label class="mb-2 fs-5">Categoria</label>
            <br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="pizza" name="category" value="Pizzas">
                <label for="pizza" class="form-check-label">Pizza</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="hamburguesa" name="category" value="Hamburguesas">
                <label for="hamburguesa" class="form-check-label">Hamburguesa</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="papas" name="category" value="Papas">
                <label for="papas" class="form-check-label">Papas</label>
            </div>
        </div>

        <div class="mb-5">
            <textarea class="form-control" placeholder="Escribe la descripción" id="exampleTextarea" name="detail" style="height: 100px"></textarea>
        </div>
        <br>

        <div class="col mb-1 d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-success">Crear</button>
            <button type="reset" class="btn btn-danger">Limpiar</button>
        </div>
    </form>
</div>